<form class="container" id="formulario-nuevoAlumno" method="POST" action="/links/guardarAlumno" >
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-3">
      <h2 class="text-center">Alumnos</h2>
            
          <div class="form-group">
            <label>Cuenta</label>
            <input type="text" class="form-control" name="txtCuentaNuevoAlumno" maxlength="13" placeholder="Ingrese el numero de cuenta">
          </div>
          <div class="form-group">
            <label>Nombre Completo</label>
            <input type="text" class="form-control" name="txtNombreNombreAlumno" placeholder="Ingrese el nombre completo">
          </div>
    
          <center>
            <button type="submit" class="btn btn-primary">Guardar</button> 
            <a href="/links/listadoAlumnos" id="btnCancelaNuevoAlumno" class="btn btn-primary">Cancelar</a>
          </center>
      </div>
    </div>
</form>